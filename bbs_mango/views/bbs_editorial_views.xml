<odoo>
    <record id="view_editorial_tree" model="ir.ui.view">
        <field name="name">manga.shop.editorial.tree</field>
        <field name="model">manga.shop.editorial</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="pais"/>
            </tree>
        </field>
    </record>

    <record id="view_editorial_form" model="ir.ui.view">
        <field name="name">manga.shop.editorial.form</field>
        <field name="model">manga.shop.editorial</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="pais"/>
                    </group>
                    <notebook>
                        <page string="Mangas">
                            <field name="mangas_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="precio"/>
                                    <field name="stock"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_editorial" model="ir.actions.act_window">
        <field name="name">Editoriales</field>
        <field name="res_model">manga.shop.editorial</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_editorial" name="Editoriales" parent="menu_manga_root" action="action_editorial"/>
</odoo>
