<odoo>
    <record id="view_pedido_tree" model="ir.ui.view">
        <field name="name">manga.shop.pedido.tree</field>
        <field name="model">manga.shop.pedido</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="cliente_id"/>
                <field name="fecha"/>
                <field name="total"/>
                <field name="estado"/>
            </tree>
        </field>
    </record>

    <record id="view_pedido_form" model="ir.ui.view">
        <field name="name">manga.shop.pedido.form</field>
        <field name="model">manga.shop.pedido</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="cliente_id"/>
                        <field name="fecha"/>
                        <field name="estado"/>
                        <field name="total"/>
                    </group>
                    <notebook>
                        <page string="Mangas">
                            <field name="mangas_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="precio"/>
                                    <field name="stock"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pedido" model="ir.actions.act_window">
        <field name="name">Pedidos</field>
        <field name="res_model">manga.shop.pedido</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_pedido" name="Pedidos" parent="menu_manga_root" action="action_pedido"/>
</odoo>
