<odoo>

    <record id="view_genero_tree" model="ir.ui.view">
        <field name="name">bbs_mango.bbs_genero.tree</field>
        <field name="model">bbs_mango.bbs_genero</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_genero_form" model="ir.ui.view">
        <field name="name">bbs_mango.bbs_genero.form</field>
        <field name="model">bbs_mango.bbs_genero</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="name"/>
                    <field name="mangas_ids">
                        <tree>
                            <field name="name"/>
                            <field name="precio"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

