<odoo>
    <record id="view_cliente_tree" model="ir.ui.view">
        <field name="name">manga.shop.cliente.tree</field>
        <field name="model">manga.shop.cliente</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="telefono"/>
            </tree>
        </field>
    </record>

    <record id="view_cliente_form" model="ir.ui.view">
        <field name="name">manga.shop.cliente.form</field>
        <field name="model">manga.shop.cliente</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="telefono"/>
                    </group>
                    <notebook>
                        <page string="Pedidos">
                            <field name="pedidos_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="fecha"/>
                                    <field name="total"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cliente" model="ir.actions.act_window">
        <field name="name">Clientes</field>
        <field name="res_model">manga.shop.cliente</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_cliente" name="Clientes" parent="menu_manga_root" action="action_cliente"/>
</odoo>
