<odoo>
    <record id="view_editorial_tree" model="ir.ui.view">
        <field name="name">bbs_mango.bbs_editorial.tree</field>
        <field name="model">bbs_mango.bbs_editorial</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="pais"/>
            </tree>
        </field>
    </record>

    <record id="view_editorial_form" model="ir.ui.view">
        <field name="name">bbs_mango.bbs_editorial.form</field>
        <field name="model">bbs_mango.bbs_editorial</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="pais"/>
                    </group>
                    <notebook>
                        <page string="Mangas">
                            <field name="mangas_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="precio"/>
                                    <field name="stock"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_editorial" model="ir.actions.act_window">
        <field name="name">Editoriales</field>
        <field name="res_model">bbs_mango.bbs_editorial</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
